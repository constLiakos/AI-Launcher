{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "dom"],
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "baseUrl": "./src",
    "paths": {
      "@prisma/client": ["generated/client"],
      "@main/*": ["main/*"],
      "@renderer/*": ["renderer/*"],
      "@shared/*": ["shared/*"],
      "@preload/*": ["preload/*"],
    },
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*",
    "src/preload/**/*",
    "src/generated/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "node_modules",
    "dist"
  ]
}